pkgname=xfce4-notifyd
pkgver=0.8.2
xver=0.8
pkgrel=3
arch=('x86_64')
depends=(xfce4-panel libnotify libxfce4ui)
source=(https://archive.xfce.org/src/apps/$pkgname/$xver/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
